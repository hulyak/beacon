{
  "version": 2,
  "name": "voiceops-ai",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_ELEVENLABS_AGENT_ID": "@elevenlabs-agent-id",
    "NEXT_PUBLIC_APP_URL": "@app-url",
    "NEXT_PUBLIC_ANALYZE_RISKS_URL": "@analyze-risks-url",
    "NEXT_PUBLIC_RUN_SCENARIO_URL": "@run-scenario-url",
    "NEXT_PUBLIC_GET_ALERTS_URL": "@get-alerts-url"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline' https://api.elevenlabs.io; connect-src 'self' https://api.elevenlabs.io wss://api.elevenlabs.io https://*.cloudfunctions.net; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:;"
        }
      ]
    }
  ],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  }
}